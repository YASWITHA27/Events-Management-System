<%- include('../partials/header.ejs') %>
    <main>
        <h1>Create a New Event</h1>
        <form method="post" action="/events/create" enctype="multipart/form-data">
            <div class="form-input">
                <label for="category">Category</label>
                <select name="category" id="category" required>
                    <option value="" disabled selected>Select a category</option>
                    <option value="Sports Extravaganza">Sports Extravaganza</option>
                    <option value="Board Game Bonanza">Board Game Bonanza</option>
                    <option value="Cultural Carnival">Cultural Carnival</option>
                    <option value="Tech Symposium">Tech Symposium</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            
            <div class="form-input">
                <label for="title">Title</label>
                <input type="text" placeholder="Enter the title of your event" name="title" id="title" required>
            </div>

            <div class="form-input">
                <label for="description">Details</label>
                <input type="text" placeholder="Enter the details of your event" name="description" id="description" required>
            </div>

            <div class="form-input">
                <label for="loc">Where</label>
                <input type="text" placeholder="Enter the location of your event" name="loc" id="loc" required>
            </div>

            <div class="form-input">
                <label for="startTime">Start</label>
                <input type="datetime-local" name="startTime" id="startTime" required>
            </div>

            <div class="form-input">
                <label for="endTime">End</label>
                <input type="datetime-local" name="endTime" id="endTime" required>
            </div>

            <div class="form-input">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" required>
            </div>
            <div class="btn">
                <button class="submit-btn" type="submit">Create Event</button>
            </div>
        </form>
    </main>
<%- include('../partials/footer.ejs') %>